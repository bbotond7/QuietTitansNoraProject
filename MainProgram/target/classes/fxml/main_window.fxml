<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.controller.MainWindowController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onExit" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onAddNewContact" text="Add Contact" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="List of contact">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <TableView fx:id="contactsTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="165.0" text="NÃ©v" />
                <TableColumn fx:id="emailColumn" prefWidth="197.0" text="E-mail" />
                  <TableColumn fx:id="actionsColumn" prefWidth="137.0" text="Actions" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
   <left>
      <VBox  spacing="10" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label lineSpacing="10.0" text="Search by Name" />
            <TextField fx:id="nameSearch" onKeyReleased="#onSearch"/>
            <Label lineSpacing="10.0" text="Search by Email" />
            <TextField fx:id="emailSearch" onKeyReleased="#onSearch"/>
         </children></VBox>
   </left>
</BorderPane>
